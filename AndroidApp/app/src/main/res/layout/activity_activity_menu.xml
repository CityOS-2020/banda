<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.maedeh.smartlightapp.activity_menu"
    android:background="@drawable/flat"
    android:id="@+id/activity_activity_menu">

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Voltage"
        android:id="@+id/btn1"
        android:layout_marginBottom="15dp"
        android:background="@drawable/menu"
        android:layout_above="@+id/btn2"
        android:layout_alignLeft="@+id/btn2"
        android:layout_alignStart="@+id/btn2"
        android:typeface="sans"
        android:fontFamily="verdana" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Money Saved"
        android:id="@+id/btn3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/menu"
        android:fontFamily="verdana"
        android:typeface="sans" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Energy Consumption"
        android:id="@+id/btn2"
        android:layout_marginBottom="15dp"
        android:gravity="fill_vertical|center_horizontal"
        android:layout_above="@+id/btn3"
        android:layout_alignLeft="@+id/btn3"
        android:layout_alignStart="@+id/btn3"
        android:background="@drawable/menu"
        android:fontFamily="verdana"
        android:typeface="sans" />
</RelativeLayout>
